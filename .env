# FastAPI Auth Service - Environment Configuration Template

# Application Configuration
APP_NAME="FastAPI Auth Service"
APP_VERSION="1.0.0"
DEBUG=false

# Database Configuration
# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost:5432/auth_service
# For SQLite (development):
DATABASE_URL=sqlite:///./auth_service.db

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-this-in-production-make-it-long-and-random
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging Configuration
LOG_LEVEL=INFO

# Security Configuration
BCRYPT_ROUNDS=12

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_EXPECTED_EXCEPTION=Exception

# Development Settings (set to true for development)
# DEBUG=true
# LOG_LEVEL=DEBUG